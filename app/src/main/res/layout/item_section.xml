<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="title"
            type="java.lang.String"/>
        <variable
            name="sharedViewModel"
            type="tech.dalapenko.thewatcher.view.viewmodel.SharedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/section_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isInverseEmptyLiveData="@{true}"
            android:emptyLiveData="@{sharedViewModel.emptyLiveData}"

            app:constraint_referenced_ids="section_title, section_recycler_view" />

        <TextView
            android:id="@+id/section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_view_middle_margin"
            android:layout_marginEnd="@dimen/common_view_middle_margin"
            android:paddingBottom="@dimen/common_view_small_padding"
            android:text="@{title}"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="@dimen/h1_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/section_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="@dimen/common_view_middle_padding"
            android:paddingEnd="@dimen/common_view_middle_padding"
            app:layout_constraintTop_toBottomOf="@+id/section_title"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>