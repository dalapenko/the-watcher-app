<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sharedViewModel"
            type="tech.dalapenko.thewatcher.view.viewmodel.SharedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.MainFragment">

        <include layout="@layout/item_empty_data"
            android:id="@+id/empty_data_layout"
            app:sharedViewModel="@{sharedViewModel}"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/now_playing_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isInverseEmptyLiveData="@{true}"
            android:emptyLiveData="@{sharedViewModel.emptyLiveData}"

            app:constraint_referenced_ids="now_playing_section_title, now_playing_recycler_view" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/popular_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isInverseEmptyLiveData="@{true}"
            android:emptyLiveData="@{sharedViewModel.emptyLiveData}"
            app:constraint_referenced_ids="popular_section_title, popular_recycler_view" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/top_rated_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:isInverseEmptyLiveData="@{true}"
            android:emptyLiveData="@{sharedViewModel.emptyLiveData}"
            app:constraint_referenced_ids="top_rated_section_title, top_rated_recycler_view" />

        <TextView
            android:id="@+id/now_playing_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/now_playing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/popular_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/popular_movie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_recycler_view" />

        <TextView
            android:id="@+id/top_rated_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/top_rated"
            app:layout_constraintStart_toStartOf="@+id/top_rated_section"
            app:layout_constraintTop_toBottomOf="@+id/popular_recycler_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/now_playing_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/now_playing_section_title"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/popular_section_title"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_rated_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/top_rated_section_title"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>